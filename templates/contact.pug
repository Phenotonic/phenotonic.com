extends page

block content
  .contact.contact--contact
    form.contact__form(name="contact", action="/" + path "/?thanks", netlify, netlify-honeypot="gotcha")

      input(type="text", name="gotcha", style="display:none")

      label(for="name") Who Are You?*
      input(name="name", type="text", placeholder="Kareem Abdul-Jabbar", required)
      label(for="email") Where Can We Contact You?*
      input(name="email", type="email", placeholder="kareem@ballsohard.com", required)

      label(for="message") What Do You Have to Say?*
      textarea(name="message", placeholder="I can do something else besides stuff a ball through a hoop. My biggest resource is my mind.", required)

      button.contact__button Get in Touch
